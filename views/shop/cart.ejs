<%- include('../includes/head.ejs') %> 
    <link rel="stylesheet" href="/stylesheets/shop.css">
</head>

<body>
    <%- include('../includes/navbar.ejs') %> 

    <main>
        <% if(products.length > 0) { %>
            <ul>
                <% products.forEach(cartProductData => { %> 
                    <li>
                        <p><%= cartProductData.productData.title %> (<%= cartProductData.qty %> )</p>
                    </li>
                    <form action="/delete-cart-product" method="post">
                        <input type="hidden" name="productId" value="cartProductData.productData.id">
                        <button class="btn " type="submit">Delete</button>
                    </form>
                <% }) %> 
            </ul>
        <% } else { %>
            <h1 style="text-align: center;">Your Cart is empty!</h1>
        <% } %> 
    </main>
<%- include('../includes/end.ejs') %> 